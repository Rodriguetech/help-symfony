{% extends 'base.html.twig' %}

{% block title %}Chef de projet {% endblock %}

{% block content %}
    <div class="container pt-5 pb-lg-4 mt-5 mb-sm-2">
        <!-- Breadcrumb-->
        <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>
                <li class="breadcrumb-item active" aria-current="page">Administrateur</li>
            </ol>
        </nav>
        <!-- Page content-->
        <div class="row">
            <!-- Sidebar-->
            <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
                <!-- Account nav-->
                <div class="card card-body border-0 shadow-sm pb-1 me-lg-1">
                    <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                        <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                            <h2 class="fs-lg mb-0">{{ app.user.nom }} {{ app.user.prenom }}</h2>

                            <ul class="list-unstyled fs-sm mt-3 mb-0">
                                <li>
                                    <a class="nav-link fw-normal p-0" href="mailto:{{ app.user.email }}">
                                        <i class="fi-mail opacity-60 me-2"></i>
                                        {{ app.user.email }}
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <a class="btn btn-outline-secondary d-block d-md-none w-100 mb-3" href="#account-nav" data-bs-toggle="collapse">
                        <i class="fi-align-justify me-2"></i>Menu</a>
                    <div class="collapse d-md-block mt-3" id="account-nav">
                        <div class="card-nav">
                            <a class="card-nav-link active" href="{{ path('chef_projet_account') }}">
                                <i class="fi-bookmark opacity-60 me-2"></i>
                                Projets
                            </a>
                            <a class="card-nav-link" href="{{ path('chef_client') }}">
                                <i class="fi-user opacity-60 me-2"></i>
                                Listes des clients
                            </a>
                            <a class="card-nav-link" href="{{ path('chef_dev') }}">
                                <i class="fi-computer opacity-60 me-2"></i>
                                Listes des développeurs
                            </a>
                            <a class="card-nav-link" href="">
                                <i class="fi-slack opacity-60 me-2"></i>
                                Tâches
                            </a>
                            <a class="card-nav-link" href="">
                                <i class="fi-send  opacity-60 me-2"></i>
                                Commentaires
                            </a>

                            <a class="card-nav-link" href="{{ path('profil') }}">
                                <i class="fi-lock opacity-60 me-2"></i>
                                Mes informations
                            </a>

                            <a class="card-nav-link" href="{{ path("app_logout") }}">
                                <i class="fi-logout opacity-60 me-2"></i>
                                Déconnexion
                            </a>

                        </div>
                    </div>
                </div>
            </aside>
            <!-- Content-->
            <div class="col-lg-8 col-md-7 mb-5">
                <h1 class="h2">Mes projets</h1>
                <a href="{{ path('chef_create_project') }}" type="button" class="btn btn-accent">Ajouter un projet</a>

                {% if projets|length > 0 %}
                    {% for projets in projet %}



                    {% endfor %}
                {% else %}
                    <br><br><br>
                    Il n'y a pas de projet disponible
                {% endif %}

            </div>
        </div>
    </div>
{% endblock %}
