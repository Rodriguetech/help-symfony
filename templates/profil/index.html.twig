{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block content %}

    <div class="container pt-5 pb-lg-4 mt-5 mb-sm-2">
        <!-- Breadcrumb-->
        <nav class="mb-4 pt-md-3" aria-label="Breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('home') }}">Accueil</a></li>

                {% if is_granted('ROLE_ADMIN') %}
                    <li class="breadcrumb-item"><a href="{{ path('admin_index') }}">Mon espace</a></li>
                {% elseif is_granted('ROLE_CLIENT') %}
                    <li class="breadcrumb-item"><a href="{{ path('client_account') }}">Mon espace</a></li>
                {% elseif is_granted('ROLE_DEV') %}
                    <li class="breadcrumb-item"><a href="{{ path('dev_account') }}">Mon espace</a></li>
                {% elseif is_granted('ROLE_CHEF') %}
                    <li class="breadcrumb-item"><a href="{{ path('chef_projet_account') }}">Mon espace</a></li>
                {% else %}
                    <li class="breadcrumb-item"><a href="{{ path('default_account') }}">Mon espace</a></li>
                {% endif %}

                <li class="breadcrumb-item active" aria-current="page">Mes informations</li>
            </ol>
        </nav>
        <!-- Page content-->
        <div class="row">
            <!-- Sidebar-->
            <aside class="col-lg-4 col-md-5 pe-xl-4 mb-5">
                <!-- Account nav-->
                <div class="card card-body border-0 shadow-sm pb-1 me-lg-1">
                    <div class="d-flex d-md-block d-lg-flex align-items-start pt-lg-2 mb-4">
                        <div class="pt-md-2 pt-lg-0 ps-3 ps-md-0 ps-lg-3">
                            <h2 class="fs-lg mb-0">{{ app.user.nom }} {{ app.user.prenom }} </h2>

                            <ul class="list-unstyled fs-sm mt-3 mb-0">

                            </ul>
                        </div>
                    </div>
                    <a class="btn btn-outline-secondary d-block d-md-none w-100 mb-3" href="#account-nav" data-bs-toggle="collapse">
                        <i class="fi-align-justify me-2"></i>Menu</a>
                    <div class="collapse d-md-block mt-3" id="account-nav">
                        <div class="card-nav">
                            <a class="card-nav-link active" href="{{ path('profil') }}">
                                <i class="fi-home opacity-60 me-2"></i>
                               Generale
                            </a>

                            <a class="card-nav-link" href="{{ path('profil_password') }}">
                                <i class="fi-lock opacity-60 me-2"></i>
                               Modifier mon mot de passe
                            </a>
                        </div>
                    </div>
                </div>
            </aside>
            <!-- Content-->
            <div class="col-lg-8 col-md-7 mb-5">
                <h1 class="h2">Mes informations</h1>
                <div class="border rounded-3 p-3 mb-4" id="personal-info">
                    <!-- Name-->
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="pe-2">
                                <label class="form-label fw-bold">Nom et prenom</label>
                                <div id="name-value">{{ app.user.nom }} {{ app.user.prenom }}</div>
                            </div>
                        </div>
                    </div>
                    <!-- Email-->
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="pe-2">
                                <label class="form-label fw-bold">Email</label>
                                <div id="email-value">{{ app.user.email }}</div>
                            </div>
                        </div>
                    </div>
                    <!-- Phone number-->
                    <div class="border-bottom pb-3 mb-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="pe-2">
                                <label class="form-label fw-bold">Numero de téléphone</label>
                                <div id="phone-value">{{ app.user.phone }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
