{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}


    <br>
    <br>
    <br>
    <br>

    <div class="modal-dialog modal-lg modal-dialog-centered p-2 my-0 mx-auto" style="max-width: 950px;">
        <div class="modal-content">
            <div class="modal-body px-0 py-2 py-sm-0">
                <div class="row mx-0 align-items-center">
                    <div class="col-md-6 border-end-md p-4 p-sm-5">
                        <h2 class="h3 mb-4 mb-sm-5">Rejoignez nous !</h2>
                        <img class="d-block mx-auto" src="img/signin-modal/signup.svg" width="344" alt="Illustartion">
                        <div class="mt-sm-4 pt-md-3">Avez vous deja un compte?
                            <a href="" >Connexion</a>
                        </div>
                    </div>


                    <div class="col-md-6 px-4 pt-2 pb-4 px-sm-5 pb-sm-5 pt-md-5">
                        {% if notification %}
                            <div class="alert alert-success" role="alert">
                                {{ notification }}
                            </div>
                        {% endif %}
                        {{ form_start(form)}}
                        <div class="mb-4">
                            {{ form_row(form.nom,  {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.prenom,  {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.email,  {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.phone,  {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-4">
                            {{ form_row(form.password,  {'attr': {'class': 'form-control'}}) }}
                        </div>


                        {{ form_row(form.submit) }}

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
